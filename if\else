#include <stdio.h>
int main (void) {
    int number1 , number2 , a ;
    printf("Enter first number:");
    scanf("%d", &number1) ;
    printf("Enter second number:");
    scanf("%d", &number2) ;
    printf("Enter your operation:\n");
    printf("Enter '1' for addition:\n");
    printf("Enter '2' for subtraction:\n");
    printf("Enter '3' for multiply:\n");
    printf("Enter '4' for division:\n");
    scanf("%d", &a);

    if ( a == 1) {
        int sum = number1 + number2 ;
        printf("%d plus %d is %d", number1, number2 , sum ) ;
    }else { if ( a == 2){
        int sub = number1 - number2 ;
        printf("%d substract %d is %d", number1 , number2 , sub);
    }else {if (a == 3) {
        int mul = number1 * number2 ;
        printf("%d multiply %d is %d", number1, number2, mul) ;
    }else {if ( a == 4) {
        int div = number1 / number2 ;
        int rem = number1 % number2 ;
        printf("%d div %d is %d remain is %d", number1 , number2 , div , rem);
    }else { if (a>4) {
        printf("ERROR, print a valid number\n") ;
    }else { if (a<1) {
        printf("ERROR, print a valid number\n") ;
    }}}}}
    }
    return 0 ;
}
